                                onMouseEnter={(e) => {
                                    e.currentTarget.style.transform = 'translateY(-4px)';
                                    e.currentTarget.style.background = 'linear-gradient(135deg, rgba(212, 160, 23, 0.3), rgba(245, 197, 24, 0.2))';
                                    e.currentTarget.style.borderColor = 'rgba(212, 160, 23, 0.4)';
                                    e.currentTarget.style.boxShadow = '0 12px 32px rgba(212, 160, 23, 0.3)';
                                }}
                                onMouseLeave={(e) => {
                                    e.currentTarget.style.transform = 'translateY(0)';
                                    e.currentTarget.style.background = 'linear-gradient(135deg, rgba(15, 17, 23, 0.8), rgba(20, 23, 33, 0.6))';
                                    e.currentTarget.style.borderColor = 'rgba(255, 255, 255, 0.1)';
                                    e.currentTarget.style.boxShadow = 'none';
                                }}>
                                    <Printer size={20} />
                                    <span>Print</span>
                                </button>
                                <button style={{
                                    width: '100%',
                                    padding: '1.2rem 2rem',
                                    background: 'linear-gradient(135deg, #F5D070 0%, #E8B550 100%)',
                                    color: '#1E293B',
                                    border: 'none',
                                    borderRadius: '16px',
                                    fontSize: '1rem',
                                    fontWeight: '700',
                                    cursor: 'pointer',
                                    transition: 'all 0.3s cubic-bezier(0.4, 0, 0.2, 1)',
                                    textTransform: 'uppercase',
                                    letterSpacing: '0.08em',
                                    boxShadow: '0 8px 32px rgba(201, 163, 71, 0.3), inset 0 1px 0 rgba(255, 255, 255, 0.5)',
                                    marginTop: '1.5rem'
                                }}
                                onMouseEnter={(e) => {
                                    e.currentTarget.style.transform = 'translateY(-2px) scale(1.01)';
                                    e.currentTarget.style.boxShadow = '0 12px 48px rgba(201, 163, 71, 0.4), inset 0 1px 0 rgba(255, 255, 255, 0.6)';
                                }}
                                onMouseLeave={(e) => {
                                    e.currentTarget.style.transform = 'translateY(0) scale(1)';
                                    e.currentTarget.style.boxShadow = '0 8px 32px rgba(201, 163, 71, 0.3), inset 0 1px 0 rgba(255, 255, 255, 0.5)';
                                }}
                            >
                                Search Again
                            </button>
                        </div>
                    </div>
                )}

                {/* Issues Section */}
                <div style={{ backgroundColor: 'rgba(255, 255, 255, 0.95)', borderRadius: '20px', padding: '1.5rem', boxShadow: '0 8px 32px rgba(0, 0, 0, 0.06), 0 0 0 1px rgba(201, 163, 71, 0.1)', border: '1px solid rgba(201, 163, 71, 0.12)' }}>
                    <h3 style={{ color: '#0F172A', fontFamily: 'inherit', fontSize: '1.3rem', marginBottom: '1.75rem', display: 'flex', alignItems: 'center', gap: '0.75rem', fontWeight: '700', letterSpacing: '-0.01em' }}>
                        <span style={{ color: '#C9A347', background: 'linear-gradient(135deg, rgba(201, 163, 71, 0.15), rgba(232, 198, 112, 0.1))', border: '1px solid rgba(201, 163, 71, 0.3)', borderRadius: '50%', width: '32px', height: '32px', display: 'flex', alignItems: 'center', justifyContent: 'center', fontSize: '1.1rem', fontWeight: '700' }}>?</span>
                        Having Issues?
                    </h3>

                    <div style={{ display: 'grid', gridTemplateColumns: 'repeat(auto-fit, minmax(250px, 1fr))', gap: '1.25rem' }}>
                        <div style={{ 
                            padding: '1.5rem 1.75rem', 
                            background: 'rgba(255, 255, 255, 0.03)',
                            borderRadius: '18px', 
                            display: 'flex', 
                            alignItems: 'center', 
                            gap: '1.25rem', 
                            cursor: 'pointer', 
                            border: '1px solid rgba(255, 255, 255, 0.08)',
                            transition: 'all 0.3s cubic-bezier(0.4, 0, 0.2, 1)',
                            boxShadow: '0 4px 16px rgba(0, 0, 0, 0.2)',
                            position: 'relative',
                            overflow: 'hidden'
                        }}
                        onMouseEnter={(e) => {
                            e.currentTarget.style.background = 'rgba(212, 160, 23, 0.08)';
                            e.currentTarget.style.borderColor = 'rgba(212, 160, 23, 0.3)';
                            e.currentTarget.style.transform = 'translateY(-4px)';
                            e.currentTarget.style.boxShadow = '0 12px 32px rgba(212, 160, 23, 0.2)';
                        }}
                        onMouseLeave={(e) => {
                            e.currentTarget.style.background = 'rgba(255, 255, 255, 0.03)';
                            e.currentTarget.style.borderColor = 'rgba(255, 255, 255, 0.08)';
                            e.currentTarget.style.transform = 'translateY(0)';
                            e.currentTarget.style.boxShadow = '0 4px 16px rgba(0, 0, 0, 0.2)';
                        }}>
                            <div style={{
                                padding: '0.75rem',
                                background: 'rgba(212, 160, 23, 0.15)',
                                borderRadius: '12px',
                                border: '1px solid rgba(212, 160, 23, 0.25)',
                                display: 'flex',
                                alignItems: 'center',
                                justifyContent: 'center'
                            }}>
                                <Mail size={24} color="#F5C518" />
                            </div>
                            <div>
                                <h4 style={{ 
                                    margin: 0, 
                                    fontSize: '1.05rem', 
                                    fontWeight: '700', 
                                    color: '#0F172A',
                                    letterSpacing: '0.01em',
                                    marginBottom: '0.25rem'
                                }}>Contact Proctor</h4>
                                <p style={{ 
                                    margin: 0, 
                                    fontSize: '0.9rem', 
                                    color: '#64748B',
                                    fontWeight: '500'
                                }}>Email your building proctor</p>
                            </div>
                        </div>

                        <div style={{ 
                            padding: '1.5rem 1.75rem', 
                            background: 'rgba(255, 255, 255, 0.03)',
                            borderRadius: '18px', 
                            display: 'flex', 
                            alignItems: 'center', 
                            gap: '1.25rem', 
                            cursor: 'pointer', 
                            border: '1px solid rgba(255, 255, 255, 0.08)',
                            transition: 'all 0.3s cubic-bezier(0.4, 0, 0.2, 1)',
                            boxShadow: '0 4px 16px rgba(0, 0, 0, 0.2)',
                            position: 'relative',
                            overflow: 'hidden'
                        }}
                        onMouseEnter={(e) => {
                            e.currentTarget.style.background = 'rgba(212, 160, 23, 0.08)';
                            e.currentTarget.style.borderColor = 'rgba(212, 160, 23, 0.3)';
                            e.currentTarget.style.transform = 'translateY(-4px)';
                            e.currentTarget.style.boxShadow = '0 12px 32px rgba(212, 160, 23, 0.2)';
                        }}
                        onMouseLeave={(e) => {
                            e.currentTarget.style.background = 'rgba(255, 255, 255, 0.03)';
                            e.currentTarget.style.borderColor = 'rgba(255, 255, 255, 0.08)';
                            e.currentTarget.style.transform = 'translateY(0)';
                            e.currentTarget.style.boxShadow = '0 4px 16px rgba(0, 0, 0, 0.2)';
                        }}>
                            <div style={{
                                padding: '0.75rem',
                                background: 'rgba(212, 160, 23, 0.15)',
                                borderRadius: '12px',
                                border: '1px solid rgba(212, 160, 23, 0.25)',
                                display: 'flex',
                                alignItems: 'center',
                                justifyContent: 'center'
                            }}>
                                <RotateCcw size={24} color="#F5C518" />
                            </div>
                            <div>
                                <h4 style={{ 
                                    margin: 0, 
                                    fontSize: '1.05rem', 
                                    fontWeight: '700', 
                                    color: '#0F172A',
                                    letterSpacing: '0.01em',
                                    marginBottom: '0.25rem'
                                }}>Room Change</h4>
                                <p style={{ 
                                    margin: 0, 
                                    fontSize: '0.9rem', 
                                    color: '#64748B',
                                    fontWeight: '500'
                                }}>Request transfer</p>
                            </div>
                        </div>

                        <div style={{ 
                            padding: '1.5rem 1.75rem', 
                            background: 'linear-gradient(135deg, rgba(254, 226, 226, 0.7), rgba(254, 202, 202, 0.5))',
                            borderRadius: '18px', 
                            display: 'flex', 
                            alignItems: 'center', 
                            gap: '1.25rem', 
                            border: '1px solid rgba(239, 68, 68, 0.25)',
                            boxShadow: '0 8px 24px rgba(239, 68, 68, 0.12)',
                            animation: 'heartbeat 2s ease-in-out infinite',
                            position: 'relative',
                            overflow: 'hidden'
                        }}>
                            <div style={{
                                position: 'absolute',
                                top: 0,
                                left: 0,
                                right: 0,
                                height: '3px',
                                background: 'linear-gradient(90deg, transparent, #EF4444, transparent)',
                                opacity: 0.6
                            }} />
                            <div style={{
                                padding: '0.75rem',
                                background: 'rgba(239, 68, 68, 0.12)',
                                borderRadius: '12px',
                                border: '1px solid rgba(239, 68, 68, 0.25)',
                                display: 'flex',
                                alignItems: 'center',
                                justifyContent: 'center'
                            }}>
                                <Phone size={24} color="#DC2626" />
                            </div>
                            <div>
                                <h4 style={{ 
                                    margin: 0, 
                                    fontSize: '1.05rem', 
                                    fontWeight: '700', 
                                    color: '#991B1B',
                                    letterSpacing: '0.02em',
                                    marginBottom: '0.25rem'
                                }}>Emergency</h4>
                                <p style={{ 
                                    margin: 0, 
                                    fontSize: '0.95rem', 
                                    color: '#B91C1C',
                                    fontWeight: '600',
                                    letterSpacing: '0.01em'
                                }}>Call: +251-911-000-000</p>
                            </div>
                        </div>
                    </div>
                </div>

            </main>

            <footer style={{
                textAlign: 'center',
                padding: '1.5rem 2rem',
                background: 'linear-gradient(135deg, #0F172A 0%, #1E293B 100%)',
                color: 'rgba(255, 255, 255, 0.7)',
                fontSize: '0.9rem',
                borderTop: '1px solid rgba(255, 255, 255, 0.1)',
                boxShadow: '0 -4px 24px rgba(0, 0, 0, 0.15)',
                flexShrink: 0,
                width: '100vw',
                position: 'relative',
                left: '0',
                right: '0',
                zIndex: 1000
            }}>
                &copy; 2024 Oda Bultum University - Dormitory Management System
            </footer>
        </div>
    );
};

export default StudentPortal;
